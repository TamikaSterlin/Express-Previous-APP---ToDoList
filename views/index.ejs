<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <link rel="stylesheet" href="style.css">
  <meta charset="utf-8">
  <title></title>
</head>

<body>
  <section class="parent">
    <header>
      <h1>Wednesday, February 10<i class="fas fa-redo"></i></h1>
    </header>
    <section class="child">
      <ul class="tasks" id="list">
        <% for(var i=0; i<tasks.length; i++) { %>
        <% if(tasks[i].completed){ %>
            <li class="task">
              <span class="taskItem done"><%= tasks[i].task %></span>
            </li>
            <% } %>
            <% if(!tasks[i].completed) { %>
        <li class="task">
          <span class="taskItem"><%= tasks[i].task %></span>
        </li>
        <% }} %>
      </ul>

      <form action="/tasks" method="POST">
        <input id="toDo" type="text" placeholder="ADD TO LIST"><i class="fas fa-plus-circle"></i>
        <p id="trash"><i class="fas fa-trash"></i> Completed Items</p>

      </form>
        <p id="left">Items Left to Complete: <span id="leftToComplete"><%= total %></span></p>
    </section>

  </section>


  <script src="https://kit.fontawesome.com/c0e668a8ad.js" crossorigin="anonymous"></script>
  <script type="text/javascript" src="main.js"> </script>
</body>

</html>
